<div class="chat-header">
  <div class="left-header">
   <div class="header-title">
      <%= @room.name %>
   </div>
  </div>
  <div class="right-header">
    <%#div class="header-button">
      <%= link_to "チャットを終了する", room_path(@room), data: { turbo_method: :delete } %>
    </div>
  </div>
</div>

<div class="messages">
  <% @messages.each do |message| %>
    <p><strong><%= message.user.nickname %>:</strong> <%= message.text %></p>
  <% end %>
</div>

<%= form_with model: [@chat_room, @chat_room.messages.build], local: true do |form| %>
  <div class="field">
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>

  <div class="actions">
    <%= form.submit "Send" %>
  </div>
<% end %>

<div class="messages">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@chat_room, @message], html: {class: "form"}, local: true do |f|%>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
  </div>
<% end %>
